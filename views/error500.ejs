<!-- error.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Error</title>
  <link rel="stylesheet" href="/css/errorstyles.css"> <!-- Link to your CSS file -->
</head>
<body>
  <div class="container">
    <h1>Error 500</h1>
    <p>Oops! Something went wrong. Please try again later.</p>
    <% if (error) { %>
      <p class="error-message"><%= error.message %></p>
      <% if (error.stack) { %>
        <p class="error-stack"><%= error.stack %></p>
      <% } %>
    <% } %>
  </div>
</body>
</html>
